            <RowDefinition MinHeight="75" Height="*"></RowDefinition>
            <RowDefinition MinHeight="75" Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,10,13,10" Name="txt1" 
             FontFamily="Verdana" FontSize="90" Grid.Row="0" Grid.RowSpan="4" AcceptsReturn="True" AcceptsTab="True" TextWrapping = "Wrap">
            
        </TextBox>

        <Button  Margin="0,3,3,3" Name="cmdAnswer7" Click="cmdAnswer_Click"  Grid.Row="0"
